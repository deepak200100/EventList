<style>
.my_form{
	width: 30%;
  margin-left: 30%;
}
.login-btn{
	margin-top: 20px;
}
</style>
<%= form_for @user_session, :html => {:role => "form",:class => "my_form"} do |f| %>
  <div class="control-group">
		<%= f.label :email %>
		<div class="controls">
		 <%= f.text_field :email,:class => "form-control" %>
	  </div>
	</div>

	<div class="control-group">
		<%= f.label :password %>
		<div class="controls">
			<%= f.password_field :password,:class => "form-control" %>
		</div>
	</div>

	<div class="button-container">
		<%= submit_tag "Login" , :class => "btn btn-primary login-btn" %>
		<%= link_to "Forget password", new_password_reset_path,:class => "btn btn-primary login-btn" %></li>
	</div>
<% end %>
