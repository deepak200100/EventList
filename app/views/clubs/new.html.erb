<%= form_for @club do |form| %>  
  <div class="form-group">  
    <%= form.label :display_name, "display_name" %>  
    <%= form.text_field :display_name %>  
  </div>  
  <div class="form-group"> 
    <%= form.label :address, "address" %>  
    <%= form.text_field :address %>  
  </div> 
  <div class="form-group">
    <%= form.label :phone_number, "phone_number" %>  
    <%= form.text_field :phone_number %>  
  </div>
  <div class="form-group">
    <%= form.label :display_pic, "display_pic" %>  
    <%= form.text_field :display_pic %>  
  </div>
   <div class="form-group">
    <%= form.label :city_id, "city_id" %>  
    <%= form.collection_select :city_id, City.order(:name),:id,:name %>
  </div>
    <%= form.submit "Submit", class: "btn btn-default btn-primary" %>
<% end %>  